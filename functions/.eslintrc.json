{
  "env": {
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": "google",
  "rules": {
    "indent": ["error", 2],
    "max-len": ["error", { "code": 80 }],
    "no-trailing-spaces": "error",
    "eol-last": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["**/*.spec.*"],
      "env": {
        "mocha": true
      }
    }
  ]
}
